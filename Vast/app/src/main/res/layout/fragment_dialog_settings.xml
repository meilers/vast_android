<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/padding_extra_large"
              android:paddingBottom="@dimen/padding_extra_large"
              android:background="@android:color/black"
              android:orientation="vertical">


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Settings"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/padding_extra_large"
        android:text="Zone Id:"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/fragment_dialog_settings_zone_id_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter Zone"
        android:gravity="center"
        android:paddingTop="@dimen/padding_extra_large"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/padding_extra_large"
        android:text="Debug Mode?"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/padding_large"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragment_dialog_settings_no_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/padding_large"
                android:text="no"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragment_dialog_settings_yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/padding_large"
                android:text="yes"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/fragment_dialog_settings_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/padding_extra_large"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
</LinearLayout>
